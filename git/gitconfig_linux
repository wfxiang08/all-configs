    ui = auto

[alias]
    sb = show-branch
    st = status .
    co = checkout
    cm = commit -m
    br = branch -a
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[core]
    editor = vim
[merge]
    tool = vimdiff
[format]
    pretty = format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[branch]
    autosetupmerge = true
[push]
